	  </MauiXaml>
	</ItemGroup>

	<ItemGroup>
	  <None Update="Views\ComingSoonPage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </None>
	  <None Update="Views\DashboardPage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </None>
