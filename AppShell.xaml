<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Mercurio.Driver.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Mercurio.Driver"
    xmlns:views="clr-namespace:Mercurio.Driver.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Mercurio.Driver">

    <!-- Page paths -->
    <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent Route="HomePage" ContentTemplate="{DataTemplate views:HomePage}" />
    <ShellContent Route="SchedulePage" ContentTemplate="{DataTemplate views:SchedulePage}" />

    <!--<ShellContent
        Title="Home"
