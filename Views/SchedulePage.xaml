<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mercurio.Driver.Views.SchedulePage"
             xmlns:viewmodels="clr-namespace:Mercurio.Driver.ViewModels"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:converters="clr-namespace:Mercurio.Driver.Converters"
             Title="SCHEDULE">
  
    <ContentPage.BindingContext>
        <viewmodels:ScheduleViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
        
    <ContentPage.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="#B82E49" StatusBarStyle="LightContent" />
    </ContentPage.Behaviors>

    <Grid>
        
        <Image Source="map_background.png" 
               Aspect="AspectFill"
               Opacity="0.2"/>

        <VerticalStackLayout Padding="30,40" Spacing="20" 
                             VerticalOptions="Center" HorizontalOptions="FillAndExpand">
           
            <Image Source="logo.png"
                   Aspect="AspectFit"
                   WidthRequest="280"
                   Margin="0,0,0,30"/>
           
            <Border StrokeShape="RoundRectangle 10" 
                    StrokeThickness="1" 
                    Stroke="#CCCCCC" 
                    BackgroundColor="White" 
                    Padding="15,0" 
                    HeightRequest="50">
                <Entry Placeholder="Run Login"
                       Text="{Binding RunLogin}"
                       VerticalTextAlignment="Center"
                       FontSize="16"/>
            </Border>
         
            <!--<Border StrokeShape="RoundRectangle 10"
                    StrokeThickness="1" 
                    Stroke="#CCCCCC" 
                    BackgroundColor="White" 
                    Padding="15,0" 
                    HeightRequest="50">
                <Entry Placeholder="Vehicle Login"
                       Text="{Binding VehicleLogin}"
                       VerticalTextAlignment="Center"
                       FontSize="16"/>
            </Border>-->

            <!-- Button Today's Schedule (Green) -->
            <Button Text="TODAY'S SCHEDULE"
                    Command="{Binding GoToTodayScheduleCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    HeightRequest="55"
                    CornerRadius="10"
                    FontSize="18"
                    FontAttributes="Bold"
                    Margin="0,20,0,0"/>

            <!-- Button Future Schedule (Blue) -->
            <Button Text="FUTURE SCHEDULE"
                    Command="{Binding GoToFutureScheduleCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                    BackgroundColor="#1976D2"
                    TextColor="White"
                    HeightRequest="55"
                    CornerRadius="10"
                    FontSize="18"
                    FontAttributes="Bold"/>
        </VerticalStackLayout>

        <ActivityIndicator IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Color="#B82E49"
                           HeightRequest="50"
                           WidthRequest="50"/>
        
    </Grid>
</ContentPage>